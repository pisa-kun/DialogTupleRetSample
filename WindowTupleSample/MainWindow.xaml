<Window x:Class="WindowTupleSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowTupleSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="button" Height="30" Width="200" Content="Show Dialog!" Click="Button_Click"></Button>
            <TextBlock x:Name="textblock" Text="CheckBOX"  HorizontalAlignment="Left"/>
            <TextBlock x:Name="textblock2" Text="WindowBox"  HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
